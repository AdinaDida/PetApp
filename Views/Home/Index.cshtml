@model IEnumerable<PetApp.Models.Shelter>
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row col-xs-12 margin0">

        @foreach (var shelter in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4" style="padding: 10px 10px; width:250px; height:400px ">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="prod mbr-gallery-item">
                            <img src="@shelter.Photo" width="300" height="200" />
                        </div>
                        <div class="card-header">
                            <h6>@shelter.Name</h6>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

</div>
