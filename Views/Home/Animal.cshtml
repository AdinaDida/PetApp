@model PetApp.Models.Animal
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
</div>
<section>
    <div style="padding:0px 300px;" class="card detailed-view">
        <br><br>
        <div class="row">
            <img class="" style="float: left" width="450" height="485"
                 src="@Model.Image" />
            <div class="col col-twothird" style="  padding-top: 87px;
    padding-left: 60px;
    width: 35%;">
                <h2>@Model.Name</h2>
                <p class="small grayed">
                    @Model.Breed<span class="separator">|</span>
                    @Model.Age<span class="separator">|</span>
                    @Model.Gender
                </p>
                <h6>@Model.Description</h6>
                <h4>About</h4>
                <table style="width:100%">
                    <tr>
                        <td>Size:</td>
                        <td>@Model.Size</td>
                    </tr>
                    <tr>
                        <td>Coat length:</td>
                        <td>@Model.Hair</td>
                    </tr>
                    <tr>
                        <td>Characteristics:</td>
                        <td>@String.Join(", ", Model.Characteristics)</td>
                    </tr>
                    <tr>
                        <td>Gets along with:</td>
                        <td>@String.Join(", ", Model.GetsAlongWith)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>
