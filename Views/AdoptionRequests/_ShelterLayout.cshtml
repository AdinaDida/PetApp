@using Microsoft.AspNetCore.Identity
@using PetApp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container shelter-profile">
    <div class="card animals text-center mx-auto">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item" style="margin-right:50px;">
                    <a class="nav-link" href="/add-pet">Add pets for adoption</a>
                </li>
                <li class="nav-item" style="margin-right:50px;">
                    <a class="nav-link" href="/shelter/animal-requests">Adoption requests</a>
                </li>
                <li class="nav-item" style="margin-right:50px;">
                    <a class="nav-link" href="/shelter-profile">Shelter's animals</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="row">
                <div class="col-md-12">
                        @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts
{
    @RenderSection("Scripts", required: false)

}