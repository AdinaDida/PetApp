@model IEnumerable<PetApp.Models.AdoptionRequest>
@{
    ViewData["Title"] = "UserRequests";
    Layout = "~/Views/AdoptionRequests/_ProfileLayout.cshtml";
}
<link rel="stylesheet" href="~/css/novideo.css" />

@if (Model.Count() == 0)
{
    <div class="alert alert-light col-md-9 offset-md-2 mx-auto" role="alert">
        <h4 class="alert-heading">No adoption requests!</h4>
        <p> There are no adoption requests here for now.</p>
        <p> When you adopt an animal it will appear here.</p>
    </div>}
else
{
    @foreach (var req in Model)
    {
        <div class="card" style="margin: 15px;width: 700px;">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-2">
                        <img class="img-responsive" src="~/Images/Animals/@req.AnimalImage" style="margin: 10px 25px 10px 25px; height:auto; width:150px;">
                    </div>
                    <div class="col-md-4" style="padding-top:40px">
                        <h5 class="product-name" style="text-align: center; margin-top: 41px;">@req.AnimalName</h5>
                    </div>
                    <div class="col-md-4 text-right" style="padding-top:40px">
                        <div class="col-md-6 text-right">
                            <h6 style="text-align: center; margin-top: 43px;">@req.AdoptionStatus<span class="text-muted"></span></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}